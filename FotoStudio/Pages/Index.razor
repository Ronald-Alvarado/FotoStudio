@page "/"

@using System.Web;

<AuthorizeView>
    <Authorized>
        <div class="card">
            <div class="card-header row justify-content-md-center bg-light">
                <h1>LogIn</h1>
            </div>
            <div class="card-body text-center">

            </div>
            <div class="card-footer bg-dark text-center">

                <p>
                    EF Studio es una empresa multifacética en el área de la imagen digital.
                    Fue fundada por los fotografos Erick Vicente y Frandy Mota, en Julio del
                    2020 a raíz de una idea tecnologica de virtualizar un sistema de registro
                    y consulta en linea en el ambito de la fotografia.
                </p>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5 bg-light">
                    <div class="card-header text-center">
                        <h3>Login</h3>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <label>Nombre de usuario: </label>
                            <input type="text" class="form-control" @bind="Usuario" />
                        </div>
                        <div class="form-group">
                            <label>Contraseña: </label>
                            <input type="password" class="form-control" @bind="Contrasena" />
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <a class="ml-md-auto btn btn-success text-center"
                               href="/login?paramUsername=@encode(Usuario)&paramPassword=@encode(Contrasena)"
                               target="_top">Login<span class="oi oi-account-login"></span></a>
                            <a class="text-right" href="R_Usuarios">Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code{

    string Usuario = "";
    string Contrasena = "";

    private string encode(string param)
    {
        return HttpUtility.UrlEncode(param);
    }
}